.panel
  .panel-header.text-center
    %figure.avatar.avatar-lg
      %img{alt: "#{current_user.name}", src: "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest current_user.email}"}/
    .panel-title.h5.mt-10
      =current_user.username
    .panel-subtitle=current_user.name
  .panel-body
    %table.table
      %thead
        %tr
          %th Request
          %th Username
      %tbody{"data-controller" => "following"}
        -current_user.pending_requests.each do |u|
          %tr.active
            %td
              %button.btn.btn-sm{ "data-action" => "click->timeline#approve", "value" => u.id}
                Approve
            %td=u.username

  .panel-footer
    / %button.btn.btn-primary.btn-block Save
