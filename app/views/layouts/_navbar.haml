%header
  .logo-cropper
    .logo
      %a{href: '/'}
        %img{src: "#{asset_pack_path('images/logo.png')}", style: "width: 30px"}
  
.menu-button
  -if current_user
    -if params[:controller] == 'workouts'
      %a{href: "/#{current_user.username}/workouts"} 
        .back-button
          .chevron-arrow-left
          %span.back-text{style: "line-height: 1em"}
            Back
    -elsif params[:controller] == 'profiles'
      %a{href: '/'} 
        .back-button
          .chevron-arrow-left
          %span.back-text{style: "line-height: 1em"}
            Back

  
    %input#navinput{:type => "checkbox"}/
    %label{:for => "navinput"}
      %span.bar.top
      %span.bar.middle
      %span.bar.bottom
  %aside
    .aside-section.aside-left
      %ul.aside-list
        -if current_user
          -if current_user.has_active_workout?
            %li{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'workouts') }
              %a.btn.btn-primary.btn-primary.btn-large{:href => "/workouts/resume"}  Resume Workout
          -else
            %li{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'workouts') }
              %a.btn.btn-primary.btn-primary.btn-large{:href => "/workouts/create"}  New Workout
          %li
            %br
          %li.aside-anchor{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'show') }
            %a{:href => "/"}  Home
          %li.aside-anchor{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'workouts') }
            %a{:href => "/#{current_user.username}/workouts"}  Workouts
          %li.aside-anchor{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'goals') }
            %a{:href => "/#{current_user.username}/goals"}  Goals
          %li.aside-anchor{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'charts') }
            %a{:href => "/#{current_user.username}/charts"}  Charts
          %li.aside-anchor{class: ('active' if params[:controller] == 'profiles' && params[:action] == 'timeline') }
            %a{:href => "/#{current_user.username}/timeline"}  Timeline
          %li.aside-anchor
            =link_to('Logout', destroy_user_session_path, method: :get)

        -else
          %li.aside-anchor
            =link_to('Login', new_user_session_path) 
