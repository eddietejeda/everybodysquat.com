-if flash.any?
  .column.col-12
    .text-center
      -flash.each do |key, value|
        -if key == 'alert'
          -alert_type = 'label-warning'
        -if key == 'error'
          -alert_type = 'label-error'
        -else  #notice
          -alert_type = 'label-primary'

        %span.label{ style: "background: transparent; color: black; text-decoration: underline" }
          =value
    