-if current_user
  %div{style: "position: relative; height: 100px"}
    %h1
      =greet_user


  -if current_user.has_active_workout?
    .card
      .card-body.columns
        .column.col-12
          %p.center 
            You have an active workout. Would you like to resume?
        .columns.col-12
          .col-3
          .col-3
            %a.btn{:href => "/workouts/resume"}  Resume
          .col-1
          .col-3
            %a.btn{:href => "/workouts/stop"}  Stop
          .col-2  
  -else
    .card
      .card-body.columns
        .column.col-12
          %p.center 
            Your next scheduled workout is March 20, 2019
        .columns.col-12
          .col-3
          .col-3
          .col-3
            %a.btn{:href => "/workouts/create"}  Begin Workout
          .col-2

        
        
  
  .card
    .card-header
      .card-title.h5
        Personal Records
      .card-body
        .columns.col-12
          .col-6
            Squat
          .col-6
            255 x 2
          .col-6
            Bench Press
          .col-6
            255 x 3
          .col-6
            Deadlift
          .col-6
            255 x 1
          .col-6
            Overhead Press
          .col-6
            255 x 1

        

  .card
    .card-header
      .card-title.h5
        Monthly Progress
      .card-body
        .chart{"data-controller" => "chart"}
          .show{"data-target" => "chart.show"}
      


  .card
    .card-header
      .card-title.h5
        Archivements
      .card-body
        %p
          1. You squatted your body-weight
        %p
          2. Deadlifted 3 plates
  

-else

  #overview.grid-hero.container.grid-lg.text-center
    %h1 EveryBodySquat
    %h2
      A simple
      %u  Barbell
      and
      %u Weight
      Tracker
    %p
      %a.btn.btn-primary.btn-lg.mr-2{:href => "/users/sign_in"} Sign In
      %a.btn.btn-primary.btn-lg{:href => "/users/sign_up"} Register
    %p.text-gray
      Latest version:
      %span.version
      
        =ENV['HEROKU_RELEASE_VERSION'] || "#{`git rev-parse --short HEAD`}"
