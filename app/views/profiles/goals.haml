.panel
  .panel-header.text-center
  .panel-body
    .calendar
      / calendar navbar
      .calendar-nav.navbar
        %button.btn.btn-action.btn-link.btn-lg
          %i.icon.icon-arrow-left
        .navbar-primary March 2017
        %button.btn.btn-action.btn-link.btn-lg
          %i.icon.icon-arrow-right
      .calendar-container
        .calendar-header
          .calendar-date Sun
          .calendar-date Mon
          .calendar-date Tue
          .calendar-date Wed
          .calendar-date Thu
          .calendar-date Fri
          .calendar-date Sat
        .calendar-body
          / calendar previous month
          .calendar-date.prev-month
            %button.date-item 26
          \...
          .calendar-date.prev-month
            %button.date-item 28
          / calendar current month
          .calendar-date
            %button.date-item 1
          .calendar-date
            %button.date-item 2
          .calendar-date
            %button.date-item 3
          / calendar date: today
          .calendar-date
            %button.date-item.date-today 4
          / calendar date: tooltip
          .calendar-date.tooltip{"data-tooltip" => "You have appointments"}
            %button.date-item 5
          / calendar date: not available
          .calendar-date.tooltip{"data-tooltip" => "Not available"}
            %button.date-item{:disabled => "disabled"} 6
          / calendar range
          .calendar-date.calendar-range.range-start
            %button.date-item 7
          .calendar-date.calendar-range
            %button.date-item 8
          .calendar-date.calendar-range.range-end
            %button.date-item 9
          \...
          .calendar-date
            %button.date-item 31
          / calendar next month
          .calendar-date.next-month
            %button.date-item 1


  .panel-footer
    / %button.btn.btn-primary.btn-block Save
