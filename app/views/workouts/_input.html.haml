%div
  %h1 workouts
  = form_with model: Todo.new, remote: true, authenticity_token: true do |f|
    = f.text_field :title,                   |
      class: "new-workout",                  |
      placeholder: "What needs to be done?", |
      # autofocus: true,                     |
      data: {                                |
        target: "workout-list.input"         |
      },                                     |
      autocomplete: "off"                    |
    = completed_filter_field
