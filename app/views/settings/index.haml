.panel
  .panel-header.text-center
    %figure.avatar.avatar-lg
      %img{:alt => "#{current_user.name}", :src => "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest current_user.email}"}/
    .panel-title.h5.mt-10=current_user.name
    .panel-subtitle=current_user.username
  %nav.panel-nav
    %ul.tab.tab-block
      %li.tab-item.active
        %a{:href => "#panels"} Profile
      %li.tab-item
        %a{:href => "#panels"} Measurements
      %li.tab-item
        %a{:href => "#panels"} Equipment
  .panel-body
    .tile.tile-centered
      .tile-content
        .tile-title.text-bold E-mail
        .tile-subtitle=current_user.email
      .tile-action
        %button.btn.btn-link.btn-action.btn-lg.tooltip.tooltip-left{"data-tooltip" => "Edit E-mail"}
          %i.icon.icon-edit
    .tile.tile-centered
      .tile-content
        .tile-title.text-bold Bar Weight
        .tile-subtitle=current_user.bar_weight
      .tile-action
        %button.btn.btn-link.btn-action.btn-lg
          %i.icon.icon-edit
    .tile.tile-centered
      .tile-content
        .tile-title.text-bold Workout Program
        .tile-subtitle=current_user.routine.name
      .tile-action
        %button.btn.btn-link.btn-action.btn-lg
          %i.icon.icon-edit
  .panel-footer
    %button.btn.btn-primary.btn-block Save
