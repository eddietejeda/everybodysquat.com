-if current_user.has_active_workout?
  .card
    .card-body.columns
      .column.col-12
        %p.center 
          You have an active workout. Would you like to resume?
      .column
        .columns
          .col-3
          .col-4
            %p   
              %a.btn{:href => "/workouts/resume"}  Resume
          .col-5
            %p   
              %a.btn{:href => "/workouts/stop"}  Stop

-else
  .card
    .card-header
      .card-title.h5
        Next workout
      .card-body
        .columns.col-12
          %p
            Your next scheduled workout is 
            %b="#{formated_date(current_user.next_workout_date)}"
        .column
          .columns
            .col-6.col-sm-12
              %p   
                %a.btn{:href => "/workouts/create"}  Begin Workout
            .col-6.col-sm-12
              %p   
                %a.btn{:href => "/profile/workouts"} View Logs
