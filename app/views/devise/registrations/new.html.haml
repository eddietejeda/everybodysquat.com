= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: false) do |f|
  = render "devise/shared/error_messages", resource: resource
  .panel.card
    .panel-header.text-center
      .panel-title.h5.mt-10 Sign Up
    .panel-body
      / .field.form-group
      /   = f.label :username
      /   = f.text_field :username, autofocus: true, autocomplete: "login"
      .field.form-group
        / = f.label :email
        = f.email_field :email, autocomplete: "email", placeholder: "Email"
      .field.form-group
        / = f.label :password
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: "Password"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)

      .field.form-group
        / = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password"

      .field.form-group
        / = f.label :invite_code
        %br/
        = f.text_field :sign_up_code, placeholder: "Invite Code"
        
        
        
    .panel-footer
      = f.submit value: "Sign up", class: "btn btn-primary btn-block"
      = render "devise/shared/links"
